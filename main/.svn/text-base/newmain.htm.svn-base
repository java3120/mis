<script language="javascript" type="text/javascript">

var mainTitleValue = '';

function $(obj)
{
	return document.getElementById(obj);
}
function onFocus(obj, img)
{
	if (mainTitleValue == '')
	{
		mainTitleValue = obj;
	}
	else
	{
		if (mainTitleValue == obj)
	    {
		    refreshContent(obj);
	    }
	    else
	    {
			$(mainTitleValue).style.background = '';
		    mainTitleValue = obj;
	    }
	}
	
	$(obj).style.background='url('+img+')';
	refreshContent(obj);
}

function refreshContent(title)
{ 
	if (title == 'purchaseImg')
		$('mainFrame').src = 'purchase.htm'
	else if (title =='saleImg')
		$('mainFrame').src = 'sale.htm'
	else if (title =='storeImg')
		$('mainFrame').src = 'store.htm'
	else if (title =='reportImg')
		$('mainFrame').src = 'report.htm'
}

function init()
{
	mainTitleValue = 'saleImg';
	onFocus('saleImg', '../images/main_title_focus.png');
	
}
</script>
