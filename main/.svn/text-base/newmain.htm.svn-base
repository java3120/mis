<body onload="init();">
<div class="top_bar"">
  <div class="main_bar">
    <ul>
      <li id="purchaseImg"><span onClick="onFocus('purchaseImg', '../images/main_title_focus.png')">进货</span></li>
      <li id="saleImg"><span onClick="onFocus('saleImg', '../images/main_title_focus.png')">出货</span></li>
      <li id="storeImg"><span onClick="onFocus('storeImg', '../images/main_title_focus.png')">库存</span></li>
      <li id="reportImg"><span onClick="onFocus('reportImg', '../images/main_title_focus.png')">报表</span></li>
    </ul>
  </div>
  
  <div class="header_bar">
  <div class="admin_bar">
    <ul>
      <li class="nick_name">管理员</li>
      <li><a href="#">退出</a></li>
    </ul>
  </div>
  </div>
</div>

<div class="main_div">
  <div id="content_div" class="content_div">
    <iframe name="mainFrame" id="mainFrame" frameborder="no" scrolling="no" src="" width="100%" height="100%" allowTransparency="true">
    </iframe> 
  </div>
</div>

